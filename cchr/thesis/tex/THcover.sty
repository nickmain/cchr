% student(s): {first name}{last name}; ordinary capitalization
\gdef\stud@{}
\def\student#1#2{%
	\ifx\stud@\@empty
		\gdef\stud@{student}
		\xdef\stud@i{{\bf #1 \n@uppercase{#2}}}
		\xdef\stud@ii{{\rm #2 #1}}
	\else	\gdef\stud@{\d@e{studenten}{students}}
		\xdef\stud@i{\stud@i\\{\bf #1 \n@uppercase{#2}}}
		\xdef\stud@ii{\stud@ii\d@e{ en }{ and }{\rm #2 #1}}
			%% all but the last "and" should be comma's
	\fi
}
\gdef\otherstud@i{}
\def\otherstudent#1#2{%
	%% must be preceded by at least one \student
	\gdef\stud@{\d@e{studenten}{students}}
	\ifx\otherstud@i\@empty
		\xdef\otherstud@i{{\bf #1 \n@uppercase{#2}}}
		\xdef\otherstud@ii{{\rm #2 #1}}
	\else	
		\xdef\otherstud@i{\otherstud@i\\{\bf #1 \n@uppercase{#2}}}
		\xdef\otherstud@ii{\otherstud@ii\d@e{ en }{ and }{\rm #2 #1}}
			%% all but the last "and" should be comma's
	\fi
}

