\newenvironment{coverpage}{%
	%% FIRST PAGE %%
	\newpage\thispagestyle{empty}
	\frenchspacing
	\ifcase\@degree{\@deg}
		\typeout{THcover warning: unrecognized degree \@deg}
	\fi
	% caption (postscript); upper right corner
	\addr@i
	% title; vertically centered
	% (the \vspace* compensates for the \vbox below)
	\vspace*{7cm}\vfill
	\begin{center}
		\begin{minipage}[t]{17cm}	% takes care of linebreaking
			\begin{center}
				{\Large\bf\@TITLE\par\noindent}
			\end{center}
		\end{minipage}
	\end{center}
	\vfill
	% student(s), degree(s) and supervisor(s); lower right corner
	\hfill\makebox[8cm][l]{%
		\vbox to 7cm{\vfill\noindent
			\stud@i\\[2mm]
			\degree@i{\@deg}\\[2mm]
			\ifx\other@deg\@empty \else	% only if specified
				\otherstud@i\\[2mm]
				\degree@i{\other@deg}\\[2mm]
			\fi
			\@acyear\\[2mm]
			\begin{tabular}{@{}ll}
				\suprv@&\suprv@i
			\end{tabular}
		}%
	}
	%% SECOND PAGE %%
	\newpage\thispagestyle{empty}
	% caption
	\vbox to 5cm{\noindent\addr@ii\vfill}
	% student(s), title and optionally abstract
	\noindent{\it\d@e{Naam en voornaam}{Name and first name} \stud@\,:
			\stud@ii
			\ifx\other@deg\@empty \else	% only if specified
				\d@e{ en }{ and }\otherstud@ii
				%% all but the last "and" should be comma's
			\fi}\\[5mm]
	{\it\d@e{Titel}{Title}\,:}
	\begin{center}
		{\bf\@title}
	\end{center}
	{\it\d@e{Engelse vertaling}{Dutch translation}\,:}
	\begin{center}
		{\bf\@transtitle}
	\end{center}
	\ifx\acm@\@empty \else	% only if specified
	\noindent{\it\d@e{ACM Classificatie}{ACM Classification}: \acm@}\\
   \fi
	\ifx\ams@\@empty \else	% only if specified
	\noindent{\it\d@e{AMS Classificatie}{AMS Classification}: \ams@}\\
   \fi
	\ifx\acm@\@empty
		\ifx\ams@\@empty
			\typeout{THcover warning: at least one ACM- or AMS-classification should be given}
			\noindent{\large\bf\d@e{ACM/AMS Classificatie}{ACM/AMS Classification}: ???\\
			\d@e{Consulteer (in overleg met je begeleider)}{Consult}:
				\begin{itemize}
					\item {\tt http://www.acm.org/class/}
					\item {\tt http://www.ams.org/msc/}
				\end{itemize}}
		\fi
	\fi
}{%        
	\vfill
	% degree(s), supervisor(s), reader(s) and counsellor(s)
	\noindent
        \ifx\option@cw\@empty{\it\degree@ii{\@deg}}\else
            {\it\degree@ii{\@deg}\hspace{-0.15cm}\option@ii{\option@cw}}
        \fi
	\ifx\other@deg\@empty \else			% only if specified
		\\(\stud@ii)\\[2mm]
		{\it\degree@ii{\other@deg}}
		\\(\otherstud@ii)
	\fi\\[2mm]
	\begin{tabular}{@{}ll@{\hspace{8mm}}l}
		\Suprv@ii
		\ifx\readr@\@empty \else\\[2mm]\Readr@ii\fi
		\ifx\couns@\@empty \else\\[2mm]\Couns@ii\fi
	\end{tabular}
}

